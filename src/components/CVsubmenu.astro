---
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1);
---

<aside>
  <div class="side-submenu">
    <a class={`sub-item ${currentPath === "cv" && "active"}`} href="/cv">
      Education & Experience</a
    >
    <a
      class={`sub-item ${currentPath === "cv/exhibitions" && "active"}`}
      href="/cv/exhibitions"
    >
      Exhibitions & Events</a
    >
    <a
      class={`sub-item ${currentPath === "cv/publications" && "active"}`}
      href="/cv/publications"
    >
      Publications</a
    >
  </div>
</aside>

<style>
  .side-submenu {
    font-size: 12pt;
    display: flex;
    border-left: none;
    border-bottom: 1px solid #000;
    padding-top: 0px;
    width: 100%;
    margin-left: 0;
    display: flex;
    justify-content: space-around;
  }

  .sub-item:hover {
    color: var(--main-pink);
  }

  .sub-item {
    padding: 10px;
    display: block;
    color: #000;
  }

  .sub-item.active {
    color: var(--main-pink);
  }

  @media only screen and (min-width: 1024px) {
    .side-submenu {
      border-bottom: none;
      border-left: 1px solid #000;
      margin-left: 30px;
      flex-direction: column;
      justify-content: unset;
      padding: 15px;
    }
  }
</style>
