  <style>
    .graphic-wrapper {
      overflow: hidden;
    }
    .contact-view a {
      color: var(--main-pink);
      text-decoration: none;
    }

    .contact-view a:hover {
      color: var(--light-pink);
    }

    .contact-view {
      width: 100vw;
      height: 85vh;
      margin: 0;
      font-size: 18px;
      line-height: 18px;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
    }

    .email-me {
      margin-bottom: 5px;
    }

    .bianca-social-icons {
      fill: var(--dark-grey);
    }

    .bianca-social-icons:hover {
      fill: var(--light-pink);
    }

    .contact-line {
      line-height: 1.4;
      max-width: 340px;
      text-align: center;
    }

    /* Desktop*/
    @media only screen and (min-width: 1024px) {
      .contact-line {
        max-width: 475px;
      }
    }
  </style>


</html>
